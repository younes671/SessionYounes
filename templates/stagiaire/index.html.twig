{% extends 'base.html.twig' %}

{% block title %}Hello StagiaireController!{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="list">
            <h1>Liste des stagiaires</h1>
                
            <a class="btn btn-success" href="{{ path('new_stagiaire') }}">Ajouter un stagiaire</a><br>
            
            {% for stagiaire in stagiaires %}
                <a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">{{ stagiaire }}</a> 
                <a  href="{{ path('edit_stagiaire', {'id': stagiaire.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                <a  href="{{ path('delete_stagiaire', {'id': stagiaire.id}) }}"><i class="fa-solid fa-trash"></i></a><br>
            {% endfor %} 
        </div>
    {% else %}
        <meta http-equiv="refresh" content="0;url={{ path('app_login') }}">
{% endif %}
    


{% endblock %}
