{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class="login">
    
    <h1>Inscription</h1>
{# formulaire d'inscription  #}
    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            attr: {
                id: 'plainPassword'
            }
        }) }}
        <div id="password-requirements">
            <h6>Exigences du mot de passe : </h6>
                <span class="requirement caractere">Au moins un caractère spécial (!@#$%^&*()[]{};:<>|./?)</span><br>
                <span class="requirement majuscule">Au moins une lettre majuscule</span><br>
                <span class="requirement minuscule">Au moins une lettre minuscule</span><br>
                <span class="requirement chiffre">Au moins un chiffre</span><br>
                <span class="requirement longueur">Minimum 12 caractères</span>
        </div>
        {{ form_row(registrationForm.agreeTerms) }}
    {{ form_end(registrationForm) }}

</div>
{% endblock %}
