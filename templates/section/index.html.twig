{% extends 'base.html.twig' %}

{% block title %}Section{% endblock %}

{% block body %}

    {% if app.user %}
        <div class="login">

          <h1>Liste modules</h1>
          
          <a class="btn btn-secondary" href="{{ path('new_section') }}">Ajouter une session</a><br>
        </div>


  {# affichage liste session  #}
          <div class="row">
            {% for section in sections %}
            
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ section.nomSection }}</h5>
                        <div class="button-card">
                          <a href="{{ path('edit_section', {'id': section.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                          <a href="{{ path('deleteModule_section', {'id': section.id}) }}"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
          </div>
{% else %}
    <meta http-equiv="refresh" content="0;url={{ path('app_login') }}">
{% endif %}

{% endblock %}
