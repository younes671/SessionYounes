                    <h5 class="card-title">{{ session.titre }}</h5>
                    <p class="ligne">Période du : {{ session.dateDebut|date('d-m-Y') ~ ' au ' ~ session.dateFin|date('d-m-Y') }}</p>
                    <div class="button-card">
                      <a href="{{ path('show_session', {'id': session.id}) }}"><i class="fas fa-info-circle"></i></a>
                      <a href="{{ path('edit_session', {'id': session.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
                      <a href="{{ path('delete_session', {'id': session.id}) }}"><i class="fa-solid fa-trash"></i></a>
                    </div>
                </div>
            </div>
        {% endfor %}
